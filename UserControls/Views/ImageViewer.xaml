<UserControl x:Class="UserControls.Views.ImageViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        x:Name="Container"
        ClipToBounds="True"
        MouseLeftButtonDown="Container_MouseLeftButtonDown"
        MouseLeftButtonUp="Container_MouseLeftButtonUp"
        MouseMove="Container_MouseMove"
        MouseWheel="Container_MouseWheel">
        <Image
            x:Name="ImageView"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
    </Border>
</UserControl>
